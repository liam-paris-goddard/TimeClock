<?xml version="1.0" encoding="utf-8"?>
<maui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:app="clr-namespace:Goddard.Clock"
                  x:Class="Goddard.Clock.UserMessagePage"
                  xmlns:maui="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls">
    <StackLayout BackgroundColor="{StaticResource GoddardMediumColor}">
        <Label x:Name="messageLabel"
               TextColor="{StaticResource GoddardLightestColor}"
               FontSize="40"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
        <ActivityIndicator x:Name="activityIndicator"
                           IsRunning="True"
                           Color="{StaticResource GoddardLightestColor}"
                           VerticalOptions="CenterAndExpand" />
    </StackLayout>
</maui:ContentPage>